<h1>Sign Up</h1>

<% form_for(@user) do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :email %><br />
    <%= f.text_field :email, :maxlength => 100, :size => 30 %>
  </p>
  <p>
    <%= f.label :email_confirmation %><br />
    <%= f.text_field :email_confirmation, :maxlength => 100, :size => 30 %>
  </p>
  <p>
    <%= f.label :password %><br />
    <%= f.password_field :password, :maxlength => 20, :size => 30 %>
  </p>
  <p>
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, :maxlength => 20, :size => 30 %>
  </p>
  <p>
    <%= f.submit "Sign Up" %>
  </p>
<% end %>
